{#
    上方导航栏 的twig模板
    导航栏的内容是存在session中的，在Yisa/controllers/Common.php中第一次读取数据库加载

    最后修改时间：2018/12/12
#}

{% block head %}
    <style>
        .dropdown {
            margin-left: 20px;
            margin-top: 20px;
        }
        .user-info {
            margin-top: 20px;
        }
        .login-out {
            margin-top: 14px;
        }
    </style>
{% endblock %}
{% block container %}
    <nav class="navbar navbar-default navbar-fixed-top my-nav" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ indexUrl }}"><img
                            src="./templates/yisa_statics/img/yisa_logo.png" class="img-responsive" alt=""></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target="#example-navbar-collapse">
                    <span class="sr-only">切换导航</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="collapse navbar-collapse" id="example-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            开发 <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {% for key,value in nav.develop %}
                            <li><a href='{{ value.url }}'>{{ value.name }}</a>
                            <li>
                                {% endfor %}
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            培训 <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {% for key,value in nav.train %}
                            <li><a href='{{ value.url }}'>{{ value.name }}</a>
                            <li>
                                {% endfor %}
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            测试 <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {% for key,value in nav.test %}
                            <li><a href='{{ value.url }}'>{{ value.name }}</a>
                            <li>
                                {% endfor %}
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            后台 <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            {% for key,value in nav.backen %}
                            <li><a href='{{ value.url }}'>{{ value.name }}</a>
                            <li>
                                {% endfor %}
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="user-info">
                        <a class="user-name">当前用户：
                            <small>{{ nav.currentUser }}</small>
                        </a>
                    </li>
                    <li class="login-out">
                        <a href='?c=common&m=logout'>
                            <button class="btn btn-warning">退出登录</button>
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
{% endblock %}