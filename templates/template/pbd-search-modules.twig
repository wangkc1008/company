    {#警报方式#}
    {% macro alarmType(tel,userName,type) %}
        <div class="form-group select-alarm clearfix">
            <input name="alarm_type" id="alarmType" type="hidden">
            <label class="col-md-3">报警方式</label>
            <div class="col-md-9">
                <a class="col-md-6 filter-group">
                    <input id="alarmType_sys" type="checkbox" checked="checked" disabled>
                    <i class="glyphicon glyphicon-ok"></i>
                    <span class="checkbox-title">系统告警</span>
                </a>
                {% if type %}
                    <a class="col-md-6 filter-group">
                        <input id="alarmType_sms" type="checkbox">
                        <i class="glyphicon glyphicon-ok"></i>
                        <span class="checkbox-title">短信告警</span>
                    </a>
                {% endif %}
            </div>
        </div>

        <div class="form-group use-id clearfix">
            <div class="col-xs-12 select-cell">
                <label class="select-text">接收人</label>
                <input type="text" readonly
                       id="acceptUid_0" class="input-control input-focus" placeholder=""
                       data-container="body" data-value="{{ tel }}({{ userName }})">
                <div class="bottom-border"></div>
                <span class="operation icon-add-uid">
    <i class="glyphicon glyphicon-plus-sign"></i>
    </span>
            </div>
        </div>
    {% endmacro %}


    {#布控原因#}
    {% macro deployReason(name) %}
        <div class="form-group clearfix">
            <div class="col-xs-12 select-cell">
                <label class="select-text">{{ name |default("布控原因") }}</label>
                <input type="text" name="reason"
                       id="alarm-reason" class="input-control input-focus" placeholder=""
                       data-container="body" data-required="true" value="" maxlength="120">
                <div class="bottom-border"></div>
            </div>
        </div>
    {% endmacro %}

    {#车牌号码#}
    {% macro plateNum(type,name) %}
        <div class="form-group clearfix">
            <div class="col-xs-12 select-cell">
                <label class="select-text">{{ name|default("车牌号码") }}</label>
                {% if type %}
                    <input type="text" data-accurate="true" id="input-num"
                           class="input-control input-focus transform-uppercase" placeholder=""
                           data-container="body" data-value="{{request.plate}}" name="plate_number">
                {% else %}
                    {% if name=="排除车牌" %}
                        <input type="text" data-trigger="focus" data-toggle="popover" name="plate_number_excluded"
                               id="input-excplate-num" class="input-control input-focus transform-uppercase"
                               placeholder=""
                               data-container="body"
                               data-content="提示：模糊查询可用“*”代替任意位数，“？”代替一位（如：{{ province }}*45，{{ province }}A？34？5）">
                    {% else %}
                        <input type="text" data-trigger="focus" data-toggle="popover" name="plate_number"
                               id="input-num" class="input-control input-focus transform-uppercase"
                               placeholder="" data-value="{{request.plate}}"
                               data-container="body"
                               data-content="提示：模糊查询可用“*”代替任意位数，“？”代替一位（如：{{ province }}*45，{{ province }}A？34？5）">
                    {% endif %}
                {% endif %}
                <div class="bottom-border"></div>
            </div>
        </div>
    {% endmacro %}

{# 审批人 #}
{% macro approver(approverType) %}
    <div class="form-group select-cell">
        <select id="approver_type" class="yisa-select" data-text="审批人" data-submit="approver"
                data-required="true">
            {% for item in approverType %}
                <option value="{{ item.id }}" {% if item.selected %} selected {% endif %}>{{ item.text }}</option>
            {% endfor %}
        </select>
    </div>
{% endmacro %}

{#遮挡面部#}
{% macro shadeFace() %}
    <div class="form-group select-cell">
        <select data-text="遮挡面部" data-submit="shade_face" data-multi="false"
                data-required="true" class="yisa-select" id="shadeFace"  data-default="0">
            <option value="0" selected="selected">不限</option>
            <option value="1">主/副驾均遮挡</option>
            <option value="2">主驾遮挡</option>
            <option value="3">副驾遮挡</option>
        </select>
        <div class="border-bottom"></div>
    </div>
{% endmacro %}

