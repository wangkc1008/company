{# 车牌号码 #}
{% macro carPlateNum(province) %}
    <div class="form-group clearfix">
        <div class="col-xs-6 select-cell">
            <label class="select-text">车牌号码</label>
            {% if request.plate == '无牌' %}
            <input id="input-num" autocomplete="off" data-value="" class="input-control input-focus transform-uppercase" name="plate_number" type="text"
                   data-accurate="false" data-radio="true"
                   data-toggle="popover" data-container="body" data-placement="right" data-trigger="focus"
                   data-content="提示：模糊查询可用“*”代替任意位数，“？”代替一位（如：{{ province }}*45，{{ province }}A？34？5）">
            {% else %}
            <input id="input-num" autocomplete="off" data-value="{{ request.plate }}" class="input-control input-focus transform-uppercase" name="plate_number" type="text"
                   data-accurate="false" data-radio="true"
                   data-toggle="popover" data-container="body" data-placement="right" data-trigger="focus"
                   data-content="提示：模糊查询可用“*”代替任意位数，“？”代替一位（如：{{ province }}*45，{{ province }}A？34？5）">
            {% endif %}
            <div class="bottom-border"></div>
        </div>
        <div class="col-xs-6 select-cell">
            <div class="radio text-center">
                <label>
                    {% if request.plate == '无牌' %}
                    <input id="no-plate" data-name="isHavePlate_number" type="radio" value="1" name="isHavePlate_number" checked="checked"> 无车牌号
                    {% else %}
                    <input id="no-plate" data-name="isHavePlate_number" type="radio" value=""> 无车牌号
                    {% endif %}
                </label>
            </div>
        </div>
    </div>
{% endmacro %}

