    <div class="form-group select-cell open">
        <label class="select-text">{{ name1|default('布控时限') }}</label>
        <div class="calendar-group">
            {#开始时间#}
            <ul class="calendar-control clearfix">
                <li class="calendar-date">
                    <input type="text" id="date-start" class="txt-date" value="{{ "now"|date("Y-m-d") }}"
                           name="begin_date" autocomplete="off">
                </li>
                <li class="calendar-date">
                    <input type="text" id="date-end" class="txt-date"
                           value="{{ 'now'|date_modify('+60 day')|date('Y-m-d') }}" name="end_date"
                           autocomplete="off">
                </li>
            </ul>

        </div>
    </div>
    <div class="form-group select-cell open">
        <label class="select-text">{{ name2|default('布控时段') }}</label>
        {% if name2 == "限行时限" %}
        <div class="calendar-restriction clearfix">
            <div class="calendar-group">
                {#开始时间1#}
                <ul class="calendar-control clearfix">
                    <li class="calendar-h">
                        <input class="txt-time t-hour" data-name="h" type="text" value="00" name="b_h"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-m">
                        <input class="txt-time t-minute" data-name="m" type="text" value="00" name="b_m"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-s">
                        <input class="txt-time t-second" data-name="s" type="text" value="00" name="b_s"
                               autocomplete="off"/>
                    </li>
                    <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
                    <li class="calendar-h">
                        <input class="txt-time t-hour" data-name="h" type="text" value="23" name="e_h"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-m">
                        <input class="txt-time t-minute" data-name="m" type="text" value="59" name="e_m"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-s">
                        <input class="txt-time t-second" data-name="s" type="text" value="59" name="e_s"
                               autocomplete="off"/>
                    </li>
                </ul>
            </div>
            <div class="datebar datebarAdd">
                <span class="datebarIcon zhe-img glyphicon glyphicon-plus-sign"></span>
            </div>
        </div>
        <div class="PassTime-2 shownone calendar-restriction clearfix">
            <div class="calendar-group">
                <ul class="calendar-control clearfix">
                    <li class="calendar-h">
                        <input class="txt-time t-hour" data-name="h" type="text" value="" name="b_h_2"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-m">
                        <input class="txt-time t-minute" data-name="m" type="text" value="" name="b_m_2"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-s">
                        <input class="txt-time t-second" data-name="s" type="text" value="" name="b_s_2"
                               autocomplete="off"/>
                    </li>
                    <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
                    <li class="calendar-h">
                        <input class="txt-time t-hour" data-name="h" type="text" value="" name="e_h_2"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-m">
                        <input class="txt-time t-minute" data-name="m" type="text" value="" name="e_m_2"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-s">
                        <input class="txt-time t-second" data-name="s" type="text" value="" name="e_s_2"
                               autocomplete="off"/>
                    </li>
                </ul>
            </div>
            <div class="datebar datebarDes">
                <span class="datebarIcon glyphicon glyphicon-remove-sign"></span>
            </div>
        </div>

        {% else %}
            <div class="calendar-group">
                {#开始时间1#}
                <ul class="calendar-control clearfix">
                    <li class="calendar-h">
                        <input class="txt-time t-hour" data-name="h" type="text" value="00" name="b_h"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-m">
                        <input class="txt-time t-minute" data-name="m" type="text" value="00" name="b_m"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-s">
                        <input class="txt-time t-second" data-name="s" type="text" value="00" name="b_s"
                               autocomplete="off"/>
                    </li>
                    <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
                    <li class="calendar-h">
                        <input class="txt-time t-hour" data-name="h" type="text" value="23" name="e_h"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-m">
                        <input class="txt-time t-minute" data-name="m" type="text" value="59" name="e_m"
                               autocomplete="off"/><span>:</span>
                    </li>
                    <li class="calendar-s">
                        <input class="txt-time t-second" data-name="s" type="text" value="59" name="e_s"
                               autocomplete="off"/>
                    </li>
                </ul>
            </div>
        {% endif %}
    </div>
    <link rel="stylesheet" href="{{ staticsUrl }}/js/zebra-datepicker/zebra-date-blue.css">
    <link rel="stylesheet" href="{{ staticsUrl }}/css/zebra-datepicker-dingzhi.css">
    <script src="{{ staticsUrl }}/js/zebra-datepicker/zebra-datepicker.js"></script>
{% endmacro %}

    {# 车牌添加 isreal:true、false #}
    {% macro plateAdd(isreal,province) %}
        <input name="plate_arr" id="plateAdd" type="hidden">
        <div class="form-group clearfix">
            {% if isreal %}
                <div class="col-xs-12 select-cell">
                    <label class="select-text">精确车牌号码</label>
                    <input type="text"
                           id="input-num" class="input-control input-focus transform-uppercase" placeholder=""
                           data-container="body" data-toggle="popover" data-trigger="focus"
                           data-value=""
                           data-placement="bottom" data-content="提示：请输入精确的车牌号码（如：{{ province }}A12345）">
